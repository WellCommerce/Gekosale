<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing
        http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin.dashboard" path="/">
        <default key="controller">Gekosale\Component\Dashboard\Controller\Admin\Dashboard</default>
        <default key="action">index</default>
        <default key="param"></default>
        <default key="mode">admin</default>
    </route>
    <route id="admin.vat" path="/vat/{action}/{id}">
        <default key="controller">Gekosale\Component\Configuration\Controller\Admin\Vat</default>
        <default key="action">index</default>
        <default key="id"></default>
        <default key="mode">admin</default>
    </route>
</routes>