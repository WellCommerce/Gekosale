<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="request" synthetic="true"/>

        <service id="cache.storage" class="Gekosale\Core\Cache\Storage\File">
            <argument type="service" id="service_container"/>
            <argument>%application.root_path%var/cache</argument>
            <argument>reg</argument>
        </service>

        <service id="cache" class="Gekosale\Core\Cache">
            <argument type="service" id="cache.storage"/>
        </service>

        <service id="session.handler"
                 class="Symfony\Component\HttpFoundation\Session\Storage\Handler\PdoSessionHandler">
            <argument type="service" id="propel.connection"/>
            <argument>%session.config%</argument>
        </service>

        <service id="session.storage" class="Symfony\Component\HttpFoundation\Session\Storage\NativeSessionStorage">
            <argument type="collection"/>
            <argument type="service" id="session.handler"/>
        </service>

        <service id="session" class="Symfony\Component\HttpFoundation\Session\Session">
            <argument type="service" id="session.storage"/>
            <call method="start"/>
        </service>

        <service id="right" class="Gekosale\Core\Right">
            <argument type="service" id="service_container"/>
        </service>

        <service id="finder" class="Symfony\Component\Finder\Finder"/>

        <service id="filesystem" class="Symfony\Component\Filesystem\Filesystem"/>

        <service id="config.locator" class="Symfony\Component\Config\FileLocator">
            <argument>%application.root_path%config</argument>
        </service>

        <service id="router.loader" class="Symfony\Component\Routing\Loader\PhpFileLoader">
            <argument type="service" id="config.locator"/>
        </service>

        <service id="router" class="Symfony\Component\Routing\Router">
            <argument type="service" id="router.loader"/>
            <argument></argument>
            <argument>%router.options%</argument>
        </service>

        <service id="helper" class="Gekosale\Core\Helper">
            <argument type="service" id="service_container"/>
        </service>

        <service id="classmapper" class="Gekosale\Core\ClassMapper">
            <argument type="service" id="service_container"/>
        </service>

        <service id="dispatcher" class="Gekosale\Core\Event">
            <argument type="service" id="service_container"/>
            <call method="addSubscribers"/>
        </service>

        <service id="resolver.controller" class="Gekosale\Core\Resolver\Controller">
            <argument type="service" id="service_container"/>
        </service>

        <service id="resolver.component" class="Gekosale\Core\Resolver\Component">
            <argument type="service" id="service_container"/>
        </service>
        
        <service id="resolver.form" class="Gekosale\Core\Resolver\Form">
            <argument type="service" id="service_container"/>
        </service>
        
        <service id="resolver.datagrid" class="Gekosale\Core\Resolver\Datagrid">
            <argument type="service" id="service_container"/>
        </service>
        
        <service id="resolver.model" class="Gekosale\Core\Resolver\Model">
            <argument type="service" id="service_container"/>
        </service>

        <service id="kernel" class="Symfony\Component\HttpKernel\DependencyInjection\ContainerAwareHttpKernel">
            <argument type="service" id="dispatcher"/>
            <argument type="service" id="service_container"/>
            <argument type="service" id="resolver.controller"/>
        </service>

        <service id="translation" class="Gekosale\Core\Translation">
            <argument type="service" id="service_container"/>
            <argument>%locale%</argument>
        </service>

        <service id="db" class="Gekosale\Core\Db">
            <argument type="service" id="service_container"/>
            <argument>%database%</argument>
        </service>
        
        <service id="datagrid" class="Gekosale\Core\Datagrid">
        	<argument type="service" id="service_container"/>
        </service>
        
        <service id="xajax.interface" class="Gekosale\Core\XajaxInterface">
        	<argument type="service" id="service_container"/>
        </service>

        <service id="xajax" class="xajax" />

        <service id="twig.loader.front" class="Twig_Loader_Filesystem">
            <argument>%front.themes%</argument>
        </service>

        <service id="twig.loader.admin" class="Twig_Loader_Filesystem">
            <argument>%admin.themes%</argument>
        </service>

        <service id="template.admin" class="Gekosale\Core\Template">
            <argument type="service" id="service_container"/>
            <argument type="service" id="twig.loader.admin"/>
            <argument type="collection">
                <argument key="cache">%application.root_path%var/cache</argument>
                <argument key="auto_reload">true</argument>
                <argument key="autoescape">true</argument>
            </argument>
            <call method="initEngine"/>
        </service>

        <service id="template.front" class="Gekosale\Core\Template">
            <argument type="service" id="service_container"/>
            <argument type="service" id="twig.loader.front"/>
            <argument type="collection">
                <argument key="cache">%application.root_path%var/cache</argument>
                <argument key="auto_reload">true</argument>
                <argument key="autoescape">true</argument>
            </argument>
            <call method="initEngine"/>
        </service>

        <service id="twig.extension.translation" class="Symfony\Bridge\Twig\Extension\TranslationExtension">
            <argument type="service" id="translation"/>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.routing" class="Symfony\Bridge\Twig\Extension\RoutingExtension">
            <argument type="service" id="urlgenerator"/>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.intl" class="Twig_Extensions_Extension_Intl">
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.box" class="Gekosale\Core\Template\Extension\Box">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.form" class="Gekosale\Core\Template\Extension\Form">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.extension.asset" class="Gekosale\Core\Template\Extension\Asset">
            <argument type="service" id="service_container"/>
            <tag name="twig.extension"/>
        </service>

    </services>
</container>