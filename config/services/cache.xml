<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

	<parameters>
		<parameter key="cache.class">Gekosale\Core\Resolver\Controller</parameter>
		<parameter key="cache_storage.class">Gekosale\Core\Cache\Storage\File</parameter>
    </parameters>
    
    <services>
        <service id="cache_storage" class="%cache_storage.class%">
            <argument type="service" id="service_container"/>
            <argument>%application.root_path%var/cache</argument>
            <argument>reg</argument>
        </service>

        <service id="cache" class="%cache.class%">
            <argument type="service" id="cache_storage"/>
        </service>
    </services>
</container>