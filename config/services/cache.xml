<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="cache.storage" class="Gekosale\Core\Cache\Storage\File">
            <argument type="service" id="service_container"/>
            <argument>%application.root_path%var/cache</argument>
            <argument>reg</argument>
        </service>

        <service id="cache" class="Gekosale\Core\Cache">
            <argument type="service" id="cache.storage"/>
        </service>
    </services>
</container>