<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="vat.repository" class="Gekosale\Plugin\Vat\Repository\VatRepository">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="vat.datagrid" class="Gekosale\Plugin\Vat\DataGrid\VatDataGrid">
            <call method="setRepository">
                <argument type="service" id="vat.repository" />
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="vat.form" class="Gekosale\Plugin\Vat\Form\VatForm">
        	<call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="vat.subscriber" class="Gekosale\Plugin\Vat\Event\VatEventSubscriber">
        	<tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>