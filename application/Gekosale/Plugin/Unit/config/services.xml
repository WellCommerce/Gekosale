<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="unit.repository" class="Gekosale\Plugin\Unit\Repository\UnitRepository">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.datagrid" class="Gekosale\Plugin\Unit\DataGrid\UnitDataGrid">
            <call method="setRepository">
                <argument type="service" id="unit.repository"/>
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.form" class="Gekosale\Plugin\Unit\Form\UnitForm">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="unit.subscriber" class="Gekosale\Plugin\Unit\Event\UnitEventSubscriber">
            <tag name="kernel.event_subscriber"/>
        </service>
    </services>
</container>