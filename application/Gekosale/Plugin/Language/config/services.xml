<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="language.repository" class="Gekosale\Plugin\Language\Repository\LanguageRepository">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="language.datagrid" class="Gekosale\Plugin\Language\DataGrid\LanguageDataGrid">
            <call method="setRepository">
                <argument type="service" id="language.repository" />
            </call>
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="language.form" class="Gekosale\Plugin\Language\Form\LanguageForm">
        	<call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="language.subscriber" class="Gekosale\Plugin\Language\Event\LanguageEventSubscriber">
        	<tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>