<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="currency.repository" class="Gekosale\Plugin\Currency\Repository\CurrencyRepository">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="currency.datagrid" class="Gekosale\Plugin\Currency\DataGrid\CurrencyDataGrid">
            <call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
        </service>
        
        <service id="currency.form" class="Gekosale\Plugin\Currency\Form\CurrencyForm">
        	<call method="setContainer">
                <argument type="service" id="service_container" />
            </call>
            <call method="init"/>
        </service>
        <service id="currency.subscriber" class="Gekosale\Plugin\Currency\Event\CurrencyEventSubscriber">
        	<tag name="kernel.event_subscriber" />
        </service>
    </services>
</container>