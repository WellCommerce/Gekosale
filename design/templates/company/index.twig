{% extends "layout.twig" %}
{% block content %}
    <h2>
        {% trans %}TXT_COMPANY_LIST{% endtrans %}
    </h2>

    <ul class="possibilities">
        <li>
            <a href="{{ path('admin.company.add') }}" class="button"><span>{% trans %}TXT_ADD_COMPANY{% endtrans %}</a>
        </li>
    </ul>

    <div class="block">
        <div id="list-company"></div>
    </div>

    <script type="text/javascript">

        function editCompany(dg, id) {
            location.href = '{{ path('admin.company.edit') }}/' + id + '';
        }

        function deleteCompany(dg, id) {
            var oRow = oDatagrid.GetRow(id);
            var title = '{% trans %}TXT_DELETE{% endtrans %}';
            var msg = '{% trans %}TXT_DELETE_CONFIRM{% endtrans %} <strong>' + oRow.name + '</strong> ?';
            var params = {
                dg: dg,
                id: id
            };
            var func = function (p) {
                return xajax_doDeleteCompany(p.dg, p.id);
            };
            new GF_Alert(title, msg, func, true, params);
        }

        var oDatagrid;

        $(document).ready(function () {

            var column_id = new GF_Datagrid_Column({
                id: 'id',
                caption: '{% trans %}TXT_ID{% endtrans %}',
                appearance: {
                    width: 90,
                    visible: false
                },
                filter: {
                    type: GF_Datagrid.FILTER_BETWEEN
                }
            });

            var column_company_name = new GF_Datagrid_Column({
                id: 'company_name',
                caption: '{% trans %}TXT_COMPANY_NAME{% endtrans %}',
                appearance: {
                    width: 140
                },
                filter: {
                    type: GF_Datagrid.FILTER_INPUT
                }
            });

            var options = {
                id: 'company',
                appearance: {
                    column_select: false
                },
                mechanics: {
                    key: 'id',
                    rows_per_page: 25
                },
                event_handlers: {
                    load: xajax_doLoadCompany,
                    edit_row: editCompany,
                    delete_row: deleteCompany,
                    click_row: editCompany
                },
                columns: [
                    column_id,
                    column_company_name
                ],
                row_actions: [
                    GF_Datagrid.ACTION_EDIT,
                    GF_Datagrid.ACTION_DELETE
                ],
                context_actions: [
                    GF_Datagrid.ACTION_EDIT,
                    GF_Datagrid.ACTION_DELETE
                ]
            };

            oDatagrid = new GF_Datagrid($('#list-company'), options);

        });
    </script>
{% endblock %}