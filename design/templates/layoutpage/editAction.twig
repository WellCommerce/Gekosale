{% extends "layout.twig" %}
{% block content %}
    <h2>{% trans %}Edit layout page{% endtrans %}</h2>
    <ul class="possibilities">
        <li><a href="{{ path('admin.layout_page.index') }}" class="button return"><span></span></a></li>
        <li><a href="#layout_page" rel="submit" class="button"><span>{% trans %}Save and finish{% endtrans %}</span></a>
        </li>
    </ul>
    <script type="text/javascript">
        function openLayoutPageEditor(sId) {
            if (sId == undefined) {
                window.location = '{{ path('admin.layout_page.index') }}';
            }
            else {
                window.location = '{{ path('admin.layout_page.edit') }}/' + sId;
            }
        }
    </script>
    <div class="layout-two-columns">
        <div class="column narrow-collapsed">
            <div class="block">
                {{ form(tree) }}
            </div>
        </div>
        <div class="column wide-collapsed">
        </div>
    </div>
{% endblock %}